<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="match_parent"
   android:layout_width="match_parent"
    android:background="@drawable/backgroundpic"
   >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:background="#FFEC00"
       android:id="@+id/title"
       android:orientation="horizontal"
       >
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:layout_marginTop="-4dp"
       android:layout_below="@+id/title"
       android:background="@drawable/toolbar_shadow">

   </LinearLayout>

   <TextView
       android:layout_width="400dp"
       android:layout_height="wrap_content"
       android:text="PINETOWN"
       android:textColor="#000"
       android:textAlignment="center"
       android:textSize="60sp"
       android:fontFamily="@font/dunlopfont"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="750dp"/>

   <LinearLayout
       android:orientation="vertical"
       android:id="@+id/twitter"
       android:layout_width="500dp"
       android:layout_height="match_parent"
       android:layout_toEndOf="@+id/videorelative"
       android:background="#fff"
       android:layout_marginBottom="50dp"
       android:layout_marginStart="70dp"
       android:layout_marginTop="130dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:background="#FFEC00"
          android:id="@+id/twittertitle"
          android:orientation="horizontal"
          >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_marginTop="10dp"
             android:text="Twitter_(@Dunloptyres_SA)"
             android:textColor="#000"
             android:textSize="35sp"
             android:textAlignment="center"/>

      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:layout_marginTop="-4dp"
          android:layout_below="@+id/twittertitle"
          android:background="@drawable/toolbar_shadow">

      </LinearLayout>


      <TextView android:id="@id/android:empty"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_horizontal|center_vertical"
          android:text="No Tweets"/>

      <ListView android:id="@id/android:list"
          android:layout_width="match_parent"
          android:paddingLeft="30dp"
          android:paddingRight="35dp"
          android:layout_marginBottom="25dp"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:divider="#e1e8ed"
          android:dividerHeight="1dp"
          android:background="@android:color/transparent"
          android:cacheColorHint="@android:color/transparent"
          android:drawSelectorOnTop="false"/>
   </LinearLayout>

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="1200dp"
       android:layout_height="2000dp"
       android:layout_marginTop="100dp"
       android:layout_marginBottom="150dp"
       android:layout_marginLeft="50dp"
       android:orientation="vertical"
       android:id="@+id/videorelative"
       tools:context="com.exampledemo.parsaniahardik.videoviewdemonuts.MainActivity"
       android:background="@drawable/background2ow"
       >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingTop="40dp"
          android:paddingBottom="40dp"
          android:paddingRight="40dp"
          android:paddingLeft="40dp"
          >

         <VideoView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentBottom="true"
             android:layout_alignParentEnd="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:layout_alignParentStart="true"
             android:layout_alignParentTop="true"
             android:id="@+id/vv"/>

      </RelativeLayout>

   </LinearLayout>


   <android.support.v4.view.ViewPager
       android:id="@+id/pdfslider"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="20dp"
       android:background="#fff"
       android:visibility="gone">

   </android.support.v4.view.ViewPager>




   <LinearLayout
   android:layout_width="match_parent"
   android:layout_height="90dp"
   android:layout_alignParentBottom="true"
   android:layout_marginLeft="100dp"
   android:layout_marginBottom="30dp"
   android:id="@+id/btnlayout">

   <Button
       android:layout_width="180dp"
       android:layout_height="80dp"
       android:layout_marginRight="50dp"
       android:id="@+id/homeBtn"
       android:text="Home"
       android:textColor="#000"
       android:background="@drawable/wholebutton"/>

   <Button
       android:layout_width="180dp"
       android:layout_height="80dp"
       android:layout_marginRight="50dp"
       android:id="@+id/slidesBtn"
       android:text="Catalogues"
       android:textColor="#000"
       android:background="@drawable/wholebutton"/>

   <Button
       android:layout_width="180dp"
       android:layout_height="80dp"
       android:id="@+id/ratingBtn"
       android:text="Rating"
       android:textColor="#000"
       android:layout_marginRight="50dp"
       android:background="@drawable/wholebutton"/>

   <Button
       android:id="@+id/promisepageBtn"
       android:layout_width="180dp"
       android:text="ABOUT"
       android:layout_height="80dp"
       android:layout_marginRight="50dp"
       android:textColor="#000"
       android:background="@drawable/wholebutton"
       android:elevation="10dp"/>

   <Button
       android:layout_width="180dp"
       android:layout_height="80dp"
       android:text="WEBSITE"
       android:textColor="#000"
       android:id="@+id/webBtn"
       android:background="@drawable/wholebutton"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/promisepage"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#fff"
       android:visibility="gone">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/promise"
          android:layout_marginTop="10dp"
          />

   </LinearLayout>

<LinearLayout
    android:id="@+id/ratinglayout"
    android:layout_width="1200dp"
    android:layout_height="2000dp"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="150dp"
    android:layout_marginLeft="50dp"
    android:orientation="vertical"
    android:background="#fff"
    android:visibility="gone"
    >
   <FrameLayout

       android:layout_width="match_parent"
       android:layout_height="550dp"

       android:id="@+id/fragment">

   </FrameLayout>

   <Button
       android:layout_width="250dp"
       android:layout_height="125dp"
       android:text="Submit"
       android:textSize="30sp"
       android:background="#000"
       android:layout_gravity="center"
       android:id="@+id/sumbitBtn"/>


</LinearLayout>



   <WebView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       android:id="@+id/webview"
       android:background="#FFF">
   </WebView>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/webbackBtn"
       android:visibility="gone"/>



   <ImageView
       android:layout_width="280dp"
       android:layout_height="140dp"
       android:src="@drawable/dunloplogo"
       android:layout_marginLeft="80dp"
       android:layout_marginTop="10dp"
       />
</RelativeLayout>