<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item

        android:left="250dp"
        android:top="30dp"
        android:bottom="30dp">
        <shape>
            <gradient
                android:startColor="#000000"
                android:type="linear">
            </gradient>
        </shape>
    </item>



    <item


        android:bottom="250dp"
        android:right="30dp"
        android:left="30dp">
        <shape>
            <gradient
                android:startColor="#000000"

                android:angle="90"
                android:type="linear">
            </gradient>
        </shape>
    </item>

    <item

        android:top="30dp"
        android:bottom="30dp"
        android:right="250dp">
        <shape>
            <gradient
                android:startColor="#000000"

                android:type="linear"
                android:angle="180">
            </gradient>
        </shape>
    </item>

    <item

        android:top="250dp"
        android:left="30dp"
        android:right="30dp">
        <shape>
            <gradient
                android:startColor="#000000"

                android:type="linear"
                android:angle="270">
            </gradient>
        </shape>
    </item>


    <!-- White foreground.  -->
    <item

        android:right="30dp"
        android:bottom="30dp"
        android:top="30dp"
        android:left="30dp">
        <shape>
            <solid
                android:color="#fff">
            </solid>
        </shape>
    </item>

</layer-list>