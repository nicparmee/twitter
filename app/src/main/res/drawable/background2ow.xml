<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:centerX="50%"
                android:centerY="30%"
                android:endColor="@android:color/transparent"
                android:gradientRadius="100%"
                android:startColor="@android:color/black"
                android:type="radial"/>
        </shape>
    </item>


    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:centerX="50%"
                android:centerY="70%"
                android:endColor="@android:color/transparent"
                android:gradientRadius="100%"
                android:startColor="@android:color/black"
                android:type="radial"/>
        </shape>
    </item>


    <!-- White foreground.  -->
    <item

        android:right="30dp"
        android:bottom="30dp"
        android:top="30dp"
        android:left="30dp">
        <shape>
            <solid
                android:color="#fff">
            </solid>
        </shape>
    </item>

</layer-list>